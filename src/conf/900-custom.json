{
  "build": {
    "dist": {
      "template": "skylark"
    }
  },
  "repositories": ["default", "skylark"],
  "packages": {
    "ForceDisable": [
      "default/Broadway",
      "default/Draw",
      "default/MusicPlayer",
      "default/ProcessViewer",
      "default/Settings",
      "default/Writer"
    ]
  },
  "handler": "shadow",
  "server": {
    "http": {
      "port": 8080,
      "connection": "ws"
    },
    "vfs": {
      "mounts": {
        "downloads": "/mnt/downloads"
      },
      "homes": "/home"
    },
    "handlers": {
      "pam": {
        "defaultGroups": ["admin"],
        "groups": "/etc/skylark/groups.json",
        "blacklist": "/etc/skylark/blacklist.json",
        "settings": "/home/%USERNAME%/.skylark/settings.json"
      },
      "shadow": {
        "defaultGroups": ["admin"],
        "groups": "/etc/skylark/groups.json",
        "blacklist": "/etc/skylark/blacklist.json",
        "settings": "/home/%USERNAME%/.skylark/settings.json"
      }
    }
  },
  "client": {
    "SettingsManager": {
      "CoreWM": {
        "useTouchMenu": true,
        "backgroundColor": "#089bd2",
        "fontFamily": "Ariel",
        "background": "image-fill",
        "icon": "othernet.png",
        "panels": [
          {
            "options": {
              "position": "top",
              "ontop": true,
              "autohide": false,
              "background": "#101010",
              "foreground": "#ffffff",
              "opacity": 85
            },
            "items": [
              {
                "name": "AppMenu",
                "settings": {}
              },
              {
                "name": "WindowList",
                "settings": {}
              },
              {
                "name": "NotificationArea",
                "settings": {}
              },
              {
                "name": "Search",
                "settings": {}
              },
              {
                "name": "Clock",
                "settings": {}
              }
            ]
          }
        ]
      },
      "VFS": {
        "scandir": {
          "showHiddenFiles": false
        }
      }
    },
    "BugReporting": {
      "url": "//github.com/Othernet-Project/RxOS-UI2/issues/new?title=%TITLE%&body=%BODY%",
      "options": {
        "message": "This bugreport was generated by Othernet Skylark"
      }
    },
    "Watermark": {
      "lines": [
        "Skylark 5.5 (c) 2019 Othernet Inc"
      ]
    },
    "VFS": {
      "Mountpoints": {
        "desktop": {
          "enabled": true,
          "visible": false,
          "options": {
            "alias": "downloads://",
            "path": "downloads://"
          }
        },
        "shared": {
          "enabled": false
        },
        "downloads": {
          "enabled": true,
          "description": "Downloads",
          "icon": "devices/harddrive.png"
        },
        "home": {
          "enabled": true,
          "visible": true
        },
        "osjs": {
          "description": "Skylark",
          "visible": false
        },
        "applications": {
          "visible": false
        }
      },
      "MaxUploadSize": 64000000
    },
    "ReloadOnShutdown": true
  }
}
